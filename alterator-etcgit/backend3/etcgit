#!/bin/sh

alterator_api_version=1
po_domain="alterator-etcgit"

. etcgit-sh-functions
. alterator-sh-functions

on_message()
{
	case "$in_action" in
		read)
			case "$in__objects" in
				/)
					write_string_param 'branch' "$(get_branch_name)"
                                        if [ -n "$(_list_modified)" ]; then
                                                write_bool_param 'modified' 'yes'
                                        else
                                                write_bool_param 'modified' 'no'
                                        fi
					;;
				head)
                                        (
                                                hd="$(get_branch_head)"
                                                write_string_param 'commit' "$hd"
                                                write_string_param 'msg' "$(get_head_message "$hd")"
                                        )
					;;
				diff)
					write_string_param 'diff' "$(get_diff)"
					;;
			esac
			;;
		write)
			case "$in__objects" in
				/)
					if [ -n "$in_branch" ]; then
                                                reload_branch
					fi
					;;
				head)
                                        if [ "$in_commit" = '#t' ]; then
                                                commit_tree && write_string_param 'commit' "$(get_branch_head)"
                                        fi
					;;
                                branch)
                                        if [ -n "${in_url-}" ]; then
                                                fetch_remote_branch
                                        else
                                                delete_branch
                                        fi
                                        ;;
			esac
			;;
		list)
			case "$in__objects" in
				branches)
                                        if [ -n "$in_url" ]; then
                                                list_remote_branches | while read br rhd lhd status; do
                                                        write_table_item 'name' "$br" \
                                                                         'remote_head' "$rhd" \
                                                                         'local_head' "$lhd" \
                                                                         'status' "$status"
                                                done
                                        else
                                                list_local_branches | while read br hd; do
                                                        write_table_item 'name' "$br" 'head' "$hd"
                                                done
                                        fi
					;;
				commits)
					list_commits | (
                                                IFS='	'
                                                while read h t m; do
                                                        write_table_item 'head' "$h" 'timestamp' "$t" 'msg' "$m"
                                                done
                                        )
					;;
                                start)
                                        if [ -n "${in_service:-}" ]; then
                                                list_start_seq_for_srv | _filter_SK | _duplicate | write_enum
                                        else
                                                list_start_seq | _duplicate | write_enum
                                        fi
                                        ;;
                                stop)
                                        if [ -n "${in_service:-}" ]; then
                                                list_kill_seq_for_srv | _filter_SK | _duplicate | write_enum
                                        else
                                                list_kill_seq | _duplicate | write_enum
                                        fi
                                        ;;
				/)
					_list_modified | _format_status | (
                                                IFS='	'
                                                while read n s; do
                                                        write_table_item 'filename' "$n" 'status' "$s"
                                                done
                                        )
					;;
			esac
			;;
	esac
}

message_loop
